class Solution:
    def findtopo(self, node, vis, st, adj):
        
        vis[node] = 1
        for val in adj[node]:
            if not vis[val]:
                self.findtopo(val, vis, st, adj)
        st.append(node)
            
    def topoSort(self, V, adj):
        
        st = []
        vis = [0]*(V)
        for i in range(V):
            if not vis[i]:
                self.findtopo(i, vis, st, adj)
        
        topo = []
        while st:
            topo.append(st.pop())
        return topo
