from collections import deque
from collections import defaultdict
class Solution:
    def findOrder(self, n, m, prerequisites):
        
        d = defaultdict(list)
        for i in range(len(prerequisites)):
            d[prerequisites[i][0]].append(prerequisites[i][1])
      
        indegree = [0 for i in range(n)]
        for i in range(n):
            for j in d[i]:
                indegree[j] += 1
        
        q = deque()
        st = []
        for i in range(n):
            if indegree[i] == 0:
                q.append(i)
        
        while q:
            temp = q.popleft()
            st.append(temp)
            for adj in d[temp]:
                indegree[adj] -= 1
                if indegree[adj] == 0:
                    q.append(adj)
                    
        if len(st) == n:
            return st[::-1]
        else:
            return []
