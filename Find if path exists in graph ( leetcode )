class Solution:
    
    def validPath(self, n: int, edges: List[List[int]], source: int, destination: int) -> bool:
        
        d = {}
        for u,v in edges:
            if u not in d:
                d[u] = [v]
                if v not in d:
                    d[v] = [u]
                else:
                    d[v].append(u)
            else:
                d[u].append(v)
                if v not in d:
                    d[v] = [u]
                else:
                    d[v].append(u)
        
        
        def dfs(source, dest, d, vis):
            
            if source == dest:
                return True
            if source in vis:
                return False
            vis.add(source)
            
            for neighbour in d[source]:
                if dfs(neighbour, dest, d, vis): return True
                    
            return False
            
        return dfs(source, destination, d, set())
